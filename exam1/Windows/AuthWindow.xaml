<Window x:Class="exam1.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:exam1.Windows"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="800">
    <Grid Background="LightBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="50">
            <TextBlock Text="Логин" FontSize="20"/>
            <TextBox x:Name="txtLogin" FontSize="20" MaxLength="30"/>
            <TextBlock Text="Пароль" FontSize="20"/>
            <PasswordBox x:Name="pbPassword" FontSize="20" MaxLength="30"/>
            <Button Content="Войти" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
